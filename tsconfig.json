{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowUnusedLabels": false,
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": [
    "client",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
